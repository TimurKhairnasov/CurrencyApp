<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
    Having themes.xml for night-v31 because of the priority order of the resource qualifiers.
    -->
    <style name="Theme.CurrencyApp.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault.DayNight">
        <item name="appWidgetRadius">@android:dimen/system_app_widget_background_radius</item>
        <item name="appWidgetInnerRadius">@android:dimen/system_app_widget_inner_radius</item>
    </style>

    <style name="Input">
        <item name="android:background">@drawable/input_background</item>
        <item name="android:textColorHint">@color/white_transparent</item>
    </style>

    <style name="Animation">
        <item name="android:background">@color/black_transparent</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>