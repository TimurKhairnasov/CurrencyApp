<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.CurrencyApp" parent="Base.Theme.CurrencyApp">
        <!-- Transparent system bars for edge-to-edge. -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <item name="colorPrimary">@color/white_transparent</item>
    </style>

    <style name="Input">
        <item name="android:background">@drawable/input_background_white</item>
        <item name="android:textColorHint">@color/black_transparent</item>
    </style>

    <style name="Animation">
        <item name="android:background">@color/white_transparent</item>
    </style>
    <style name="Button">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>