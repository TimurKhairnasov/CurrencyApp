<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
    Having themes.xml for v31 variant because @android:dimen/system_app_widget_background_radius
     and @android:dimen/system_app_widget_internal_padding requires API level 31
    -->
    <style name="Theme.CurrencyApp.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault.DayNight">
        <item name="appWidgetRadius">@android:dimen/system_app_widget_background_radius</item>
        <item name="appWidgetInnerRadius">@android:dimen/system_app_widget_inner_radius</item>
        <item name="colorPrimary">@color/white_transparent</item>
    </style>

    <style name="Input">
        <item name="android:background">@drawable/input_background_white</item>
        <item name="android:textColorHint">@color/black_transparent</item>
    </style>

    <style name="Animation">
        <item name="android:background">@color/white_transparent</item>
    </style>
    <style name="Button">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>